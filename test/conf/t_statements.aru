Sequential_Stmts: search statements (accept_return,
                                     block,
                                     case_others,
                                     case_others_null,
                                     declare_block,
                                     dispatching_call,
                                     entry_return,
                                     effective_declare_block,
                                     exception_others,
                                     exception_others_null,
                                     exit,
                                     function_return,
                                     goto,
                                     if_elsif,
                                     labelled,
                                     no_else,
                                     null,
                                     procedure_return,
                                     raise,
                                     raise_standard,
                                     reraise,
                                     unnamed_block,
                                     unnamed_exit,
                                     unnamed_loop_exited,
                                     unnamed_multiple_loop,
                                     untyped_for);

Tasking_Stmts:    check  statements (abort,
                                     asynchronous_select,
                                     conditional_entry_call,
                                     delay,
                                     delay_until,
                                     requeue,
                                     selective_accept,
                                     terminate,
                                     timed_entry_call);

Loop_Stmts:       check  statements (exit_for_loop,
                                     exit_while_loop,
                                     for_loop,
                                     loop_return,
                                     multiple_exits,
                                     simple_loop,
                                     unconditional_exit,
                                     unnamed_for_loop,
                                     unnamed_simple_loop,
                                     unnamed_while_loop,
                                     while_loop);

If_Count   : count statements (if);
Case_Count : count statements (case);
