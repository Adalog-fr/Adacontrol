set statements.small_loop_length 1;
Sequential_Stmts: search statements (accept_return,
                                     backward_goto,
                                     block,
                                     case_others,
                                     case_others_null,
                                     declare_block,
                                     dispatching_call,
                                     dynamic_procedure_call,
                                     entry_return,
                                     effective_declare_block,
                                     exception_others,
                                     exception_others_null,
                                     exited_extended_return,
                                     extended_return,
                                     function_return,
                                     goto,
                                     goto_not_continue,
                                     if_elsif,
                                     inherited_procedure_call,
                                     labelled,
                                     named_exit,
                                     no_else,
                                     null,
                                     procedure_call,
                                     procedure_return,
                                     raise,
                                     raise_foreign,
                                     raise_nonpublic,
                                     raise_locally_handled,
                                     raise_standard,
                                     redispatching_call,
                                     reraise,
                                     simple_block,
                                     unnamed_block,
                                     unnamed_simple_block,
                                     unnamed_exit,
                                     unnamed_loop_exited,
                                     unnamed_multiple_loop,
                                     untyped_for,
                                     untyped_for_in,
                                     untyped_for_of
                                     );

Tasking_Stmts:    check  statements (abort,
                                     accept,
                                     asynchronous_select,
                                     conditional_entry_call,
                                     delay,
                                     delay_until,
                                     entry_call,
                                     requeue,
                                     selective_accept,
                                     terminate,
                                     timed_entry_call);

Loop_Stmts:       check  statements (exit,
                                     exit_for_loop,
                                     exit_while_loop,
                                     exit_plain_loop,
                                     exit_expanded_name,
                                     exit_outer_loop,
                                     for_loop,
                                     for_in_loop,
                                     for_iterator_loop,
                                     for_of_loop,
                                     loop_return,
                                     multi_for_of_loop,
                                     multiple_exits,
                                     simple_loop,
                                     unconditional_exit,
                                     unnamed_for_loop,
                                     unnamed_simple_loop,
                                     unnamed_while_loop,
                                     while_loop);

Bad_Bounds:        check statements (hard_bounds_array_for_loop);


null_stmts:        check statements (null_case_path,
                                     null_if_path,
                                     null_loop_body);

If_Count   : count statements (if);
Case_Count : count statements (case);
All_Stmts  : count statements (any_statement);
